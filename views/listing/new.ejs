
<% layout("/layouts/boilerplate") %>

<div class="row">
<div class="col-8 offset-2">
<h3  class="mt-4 mb-4 fw-semibold">Creating a New List</h3>

    <form action="/listings" method="post">

        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="title" , placeholder="Add a catchy title" class="form-control">
       </div>

       <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" placeholder="Enter the description" class="form-control"></textarea>
      </div>

       <div class="mb-3">
       <label for="image" class="form-label">Image URL</label>
       <input type="text" name="image" placeholder="Enter image URL" class="form-control">
       </div>

       <div class="row">

        <div class="mb-3 col-md-8">
         <label for="number" class="form-label">Price</label>
        <input type="number" name="price" placeholder="1200"  class="form-control">
        </div>

        <div class="mb-3 col-md-4">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="country" placeholder="Pakistan" class="form-control">
        </div>

        </div>


        <div class="mb-3">
         <label for="location" class="form-label">Location</label>
        <input type="text" name="location" placeholder="F-9, Islamabad, Pakistan" class="form-control">
        </div>



        <button  class="  btn btn-outline-danger px-4 rounded-pill add-btn">submit</button>
    </form>

</div>
</div>