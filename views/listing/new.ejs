
<% layout("/layouts/boilerplate") %>

<div class="row">
  <h2  class="heading text-center mt-4 mb-4 fw-bold">Register Your Property</h2>

<div class="col-10 offset-1 col-md-8 col-lg-6 offset-lg-3">


    <form action="/listings" method="post"  enctype="multipart/form-data" class="needs-validation form" novalidate>

        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="title" , placeholder="Add a catchy title" class="form-control" id="placeholder-style"  required>
        <div class="invalid-feedback"> Please enter the title.</div>
        <div class="valid-feedback">Looks good! </div>
      
       

       <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" placeholder="Enter the description" class="form-control" id="placeholder-style" required></textarea>
        <div class="invalid-feedback"> Please enter the short description .</div>
      </div>

       <div class="mb-3">
       <label for="image" class="form-label">Upload Listing Image </label>
       <input type="file"     name="image" placeholder="Enter image URL" class="form-control" id="placeholder-style"  required>
      
       </div>

       <div class="row">

        <div class="mb-3 col-md-8">
         <label for="number" class="form-label">Price</label>
        <input type="number" name="price" placeholder="1200"  class="form-control" min="1" id="placeholder-style" required>
        <div class="invalid-feedback">
        Please enter the valid price.
      </div>
        </div>

        <div class="mb-3 col-md-4">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="country" placeholder="Pakistan" class="form-control" id="placeholder-style" required>
        <div class="invalid-feedback">
        Please enter the country.
      </div>
        </div>

        </div>


        <div class="mb-3">
         <label for="location" class="form-label">City</label>
        <input type="text" name="location" placeholder=" Islamabad, Pakistan" class="form-control" id="placeholder-style"  required>
        <div class="invalid-feedback">
        Please enter the valid location.
      </div>
        </div>



        <button  class="  btn btn-outline-success px-4 rounded-pill add-btn">submit</button>
    </form>

</div>
</div>